<!DOCTYPE html>
<html>
<head>
  <title>neoFICTION</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://apis.google.com/js/plusone.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/facebook_div"%>
  <div id="wrapper">
	<div class="center">
	  <div id="container">
		 <div id="header">
	        <div class="two-third">
		        <%= render "layouts/logo"%>
  	        </div>
		    <div class="one-third last">
	            <%= render "layouts/user_nav"%>
	        </div>
		    <div class="one">
				<%= render "layouts/flash_alerts" %> 
		    </div>
		  </div>
		
			<%= yield %>

            <%= render 'layouts/footer' %>

		    <div class="one">
			    <div id="debug">
			        <%= debug(params) if Rails.env.development? %>
			        <%= request.url.to_s if Rails.env.development? %>
			    </div>  <!-- end #debug -->
			</div>  <!-- class="one" -->
	
	
    </div>  <!-- CONTAINER  -->
  </div>  <!-- CENTER  -->
</div>  <!-- WRAPPER  -->



</body>
</html>
