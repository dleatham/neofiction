<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><p><%= f.label :email %>
  <%= f.email_field :email %></p></div>

  <div><p><%= f.label :password %>
  <%= f.password_field :password %></p></div>

  <% if devise_mapping.rememberable? -%>
    <div><p><%= f.check_box( :remember_me) %>  <%= f.label :remember_me %></p></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div><br />
<% end %>

<%= render :partial => "devise/shared/links" %>